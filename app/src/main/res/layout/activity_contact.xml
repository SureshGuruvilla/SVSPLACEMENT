<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/contact_text"
                    android:textSize="35dp"
                    android:text="Contact Us"
                    android:layout_marginBottom="20dp"
                    android:gravity="right"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="If you have something to share with us.The easiest way to do that, is to write us.And we will write back.Easy right?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:gravity="center|bottom"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Share your feedback with us."
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textPersonName"
            android:id="@+id/contact_name"
            android:paddingLeft="20dp"
            android:hint="Name"
            style="@style/MyEditTextStyle"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/contactxml"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/contact_mail"
            android:paddingLeft="20dp"
            android:hint="Email address"
            style="@style/MyEditTextStyle"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/contactxml"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <EditText
            android:inputType="number"
            android:id="@+id/contact_phone"
            android:hint="Phone number"
            android:paddingLeft="20dp"
            style="@style/MyEditTextStyle"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/contactxml"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <android.support.design.widget.CoordinatorLayout
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="text"
                android:id="@+id/contact_feedback"
                android:padding="30dp"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:hint="Tell your feedback in few words"
                style="@style/MyEditTextStyle"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/contactxml"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView
                android:id="@+id/contact_submit"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/submit"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:text="Submit"
                android:layout_width="150dp"
                android:layout_height="50dp" />
        </android.support.design.widget.CoordinatorLayout>
        <LinearLayout
            android:background="@color/grey"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="Get in Touch!"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+91 9894861613"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp" />
                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="murali@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:text="Murali Shankar"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/white"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+91 8220254450"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp" />
                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="saravannan.innocube@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:text="Saravanan.T"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>