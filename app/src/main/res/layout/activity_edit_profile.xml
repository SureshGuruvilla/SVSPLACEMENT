<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.admin.svsplacement.EditProfileActivity">
        <android.support.design.widget.CoordinatorLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="250dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/edit_editdp"
                android:src="@drawable/ic_camera_alt"
                app:backgroundTint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                app:fabSize="mini"
                app:layout_anchorGravity="bottom|right|end"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                />
        </android.support.design.widget.CoordinatorLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edit_textname"
                    android:textColor="@color/black"
                    android:text="Name"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:paddingLeft="30dp"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/edit_editname"
                    android:visibility="gone"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/editname"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edit_textdob"
                    android:textColor="@color/black"
                    android:text="DOB"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:paddingLeft="30dp"
                    android:gravity="center_vertical" />
                <EditText
                    android:id="@+id/edit_editdob"
                    android:visibility="gone"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/editdob"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edit_textphoneno"
                    android:textColor="@color/black"
                    android:text="Phone no"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:paddingLeft="30dp"
                    android:gravity="center_vertical" />
                <EditText
                    android:id="@+id/edit_editphoneno"
                    android:visibility="gone"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/editphoneno"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edit_textfrom"
                    android:textColor="@color/black"
                    android:text="From"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:paddingLeft="30dp"
                    android:gravity="center_vertical" />
                <EditText
                    android:id="@+id/edit_editfrom"                    android:visibility="gone"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/editfrom"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edit_textschool"
                    android:textColor="@color/black"
                    android:text="School"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:paddingLeft="30dp"
                    android:gravity="center_vertical" />
                <EditText
                    android:id="@+id/edit_editschool"
                    android:visibility="gone"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/editschool"
                    android:background="@drawable/ic_edit_black_24dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edit_submit"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_margin="30dp"
                android:textColor="@color/white"
                android:text="Submit"
                android:background="@drawable/submit"
                android:layout_width="100dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/edit_pb1"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:background="#737373"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/colorAccent"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Change Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/edit_oldpass"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_lock"
                android:paddingLeft="20dp"
                android:hint="Enter Your Old Password"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="@style/MyEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <EditText
                android:inputType="textPassword"
                android:id="@+id/edit_pass"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_key"
                android:paddingLeft="20dp"
                android:hint="Enter Your New Password"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="@style/MyEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <EditText
                android:inputType="textPassword"
                android:id="@+id/edit_conpass"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/ic_key"
                android:paddingLeft="20dp"
                android:hint="Confirm new Password"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                style="@style/MyEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="*"
                    android:textSize="25dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="10dp"
                    android:text="Make sure your new password may have more than six characters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/edit_change"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:textColor="@color/white"
                    android:text="Change"
                    android:background="@drawable/submit"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/edit_pb2"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>
    
</ScrollView>
