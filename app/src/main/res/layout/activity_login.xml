<ScrollView
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/login_text"
                android:textSize="35dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Login into your Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/cap"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/logintext"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:paddingLeft="20dp"
                    android:hint="Enter Your register number"
                    android:background="@drawable/logintext1"
                    android:inputType="number"
                    android:id="@+id/login_mail"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_person_outline"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/logintext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:paddingLeft="20dp"
                    android:hint="Password"
                    android:background="@drawable/logintext1"
                    android:inputType="textPassword"
                    android:id="@+id/login_password"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="60dp" />
                <TextView
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_visibility_black"
                    android:layout_gravity="center"
                    android:id="@+id/conviewpass"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/login_login"
                    android:textColor="@color/white"
                    android:background="@drawable/submit"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/login"
                    android:layout_width="100dp"
                    android:layout_height="50dp" />

            </LinearLayout>
            <ProgressBar
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:id="@+id/login_progress"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
</ScrollView>