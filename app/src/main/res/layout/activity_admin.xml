<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.svsplacement.AdminActivity">
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Create new User from Admin"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Enter Register Number like 722016106000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:id="@+id/admin_signUpEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_box"
            android:id="@+id/admin_signUp"
            android:text="Create New Account"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Promote to Admin"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <Spinner
            android:id="@+id/admin_spinner"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Enter Register Number like 722016106000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:id="@+id/admin_promotionEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <TextView
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_box"
            android:gravity="center"
            android:id="@+id/admin_promotion"
            android:text="Promote"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
